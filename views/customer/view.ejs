<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <!-- set viewport to device width to make site responsive -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="styles/base.css" />
    <title>AV Bakery: Edit Customer Page</title>
    <style>
      .form-submit {
        line-height: 1.4;
      }
    </style>
  </head>

  <body>
    <div>
      <h1>Auroville Bakery Order Management</h1>
      <h2>View Customer</h2>
    </div>

    <span id="saveMessage" style="display: block; margin-top: 10px; height: 40px" class="error"><%= error %></span>
    <% var customer = data[0];%>
    <section class="form-group">
      <ul class="form-fields">
        <li>
          <label for="description">Name:</label>
          <span><%= customer.name %></span>
        </li>
        <li>
          <label for="description">Account:</label>
          <span><%= customer.account %></span>
        </li>
        <li>
          <label for="description">Community:</label>
          <span><%= customer.community %></span>
        </li>
        <li>
          <label for="description">Phone:</label>
          <span><%= customer.phone %></span>
        </li>
        <li>
          <label for="description">Email:</label>
          <span><%= customer.email %></span>
        </li>
        <li>
          <label for="description">Notes:</label>
          <span><%= customer.notes %></span>
        </li>
      </ul>
    </section>

    <section>
      <button id="createCustomerOrder" class="customer-button" onclick="createCustomerOrder(<%= customer.id %>)">Create Order</button>
      <button id="viewCustomerOrder" class="customer-button">View Order</button>
    </section>

  </body>

  <script src="scripts/jquery.js"></script>
  <script src="scripts/order.js"></script>
</html>
